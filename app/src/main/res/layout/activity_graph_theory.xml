<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/graph_theory_topic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Graph" />

        <TextView
            android:id="@+id/graph_theory_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A graph is a set of vertices and a collection of edges that each connect a pair of vertices." />

        <com.example.discretemathlearningassistant.graphs.visual.GraphView
            android:id="@+id/graph_theory_image3"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/graph_theory_topic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Vertex" />

        <TextView
            android:id="@+id/graph_theory_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A vertex (also called a node) is a fundamental part of a graph. It can have a name, which is called the 'key'." />

        <TextView
            android:id="@+id/graph_theory_topic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Edge" />

        <TextView
            android:id="@+id/graph_theory_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="An edge is another fundamental part of a graph. An edge connects two vertices to show that there is a relationship between them." />

        <TextView
            android:id="@+id/graph_theory_topic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Adjacency" />

        <TextView
            android:id="@+id/graph_theory_description4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Two vertices are said to be adjacent if they are both endpoints of the same edge." />

        <TextView
            android:id="@+id/graph_theory_topic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Path" />

        <TextView
            android:id="@+id/graph_theory_description5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A path in a graph is a sequence of vertices where each adjacent pair is connected by an edge." />

        <TextView
            android:id="@+id/graph_theory_topic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Cycle" />

        <TextView
            android:id="@+id/graph_theory_description6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A cycle in a graph is a path that starts and ends at the same vertex." />

        <TextView
            android:id="@+id/graph_theory_topic7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Connected Graph" />

        <TextView
            android:id="@+id/graph_theory_description7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A graph is connected when there is a path between every pair of vertices. In a connected graph, there are no unreachable vertices." />

        <TextView
            android:id="@+id/graph_theory_topic8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Directed Graph" />

        <TextView
            android:id="@+id/graph_theory_description8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A directed graph, also called a digraph, is a graph where all edges are directed. Each edge has a direction from one vertex to another." />

        <com.example.discretemathlearningassistant.graphs.visual.DirectedGraphView
            android:id="@+id/graph_theory_image8"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/graph_theory_topic9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Weighted Graph" />

        <TextView
            android:id="@+id/graph_theory_description9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A weighted graph is a graph in which each edge is assigned a weight or cost. These weights can represent things like distance, cost, etc." />

        <TextView
            android:id="@+id/graph_theory_topic10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Planar Graph" />

        <TextView
            android:id="@+id/graph_theory_description10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="A planar graph is a graph that can be drawn in a plane without edges crossing. Every planar graph can be drawn so that no edges intersect each other." />
    </LinearLayout>
</ScrollView>
